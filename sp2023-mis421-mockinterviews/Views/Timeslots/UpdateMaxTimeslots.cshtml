@{
    ViewData["Title"] = "Update Duration";
}

<h1>Update the Maximum Number of Signups per Timeslot</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMaxSignupsConfirmed">
            <div class="form-group">
                <label for="maxsignups">New Duration:</label>
                <input type="number" class="form-control" id="maxsignups" name="maxsignups" />
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

