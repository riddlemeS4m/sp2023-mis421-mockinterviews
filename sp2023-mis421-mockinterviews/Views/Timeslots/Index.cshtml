@model sp2023_mis421_mockinterviews.Models.ViewModels.TimeslotViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Timeslots</h1>

<p>
    <a asp-action="Create">Create New</a>
    <br />
    <a asp-action="UpdateMaxTimeslots">Update Max Timeslot Signups</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Timeslots[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDates[0].Date)
            </th>
            <th>
                Active/Inactive
            </th>
            <th>
                Visible to Volunteers
            </th>
            <th>
                Visible to Interviewers
            </th>
            <th>
                Visible to Students
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Timeslots) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVolunteer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInterviewer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStudent)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> @*|
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
<hr />
<h1>Event Dates</h1>

<p>
    <a asp-controller="EventDates" asp-action="Create">Create New Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventDates[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDates[0].EventName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EventDates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    <a asp-controller="EventDates" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                   @* <a asp-controller="EventDates" asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a asp-controller="EventDates" asp-action="Delete" asp-route-id="@item.Id">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>

