@using sp2023_mis421_mockinterviews.Models.ViewModels;
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Roles</h1>
<p>
    <a asp-controller="Users" asp-action="CreateProvisionaryUser">Create New User</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Microsoft Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserId</td><td>
                    <a asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a> | 
                    <a asp-controller="Users" asp-action="ResetUserPassword" asp-route-userId="@user.UserId">Reset Password</a> | 
                    <a asp-controller="Users" asp-action="DeleteUser" asp-route-userId="@user.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>