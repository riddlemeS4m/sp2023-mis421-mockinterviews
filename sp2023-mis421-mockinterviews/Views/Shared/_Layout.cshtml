@using sp2023_mis421_mockinterviews.Data;
@using sp2023_mis421_mockinterviews.Data.Constants;
<!DOCTYPE html>
<html lang="en-us">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - UA MIS Mock Interviews</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <meta name="description" content="This is meta description">
    <meta name="author" content="Themefisher">
    <link rel="shortcut icon" href="images/ScriptA.png" type="image/x-icon">
    <link rel="icon" href="images/ScriptA.png" type="image/x-icon">

    <!-- Data Tables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" integrity="sha384-nlqJt7hgTYzEtpwtccFUVNZPXLN4pJoZ/QIfCtAIK9txm0dVyw/lz/47SslwYLPj" crossorigin="anonymous">
    
    <!-- theme meta -->
    <meta name="theme-name" content="wallet" />

    <!-- # Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- # CSS Plugins -->
    <link rel="stylesheet" href="~/plugins/slick/slick.css">
    <link rel="stylesheet" href="~/plugins/font-awesome/fontawesome.min.css">
    <link rel="stylesheet" href="~/plugins/font-awesome/brands.css">
    <link rel="stylesheet" href="~/plugins/font-awesome/solid.css">

    <!-- # Main Style Sheet -->
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>

    <!-- navigation -->
    <header class="navigation bg-tertiary">
        <nav class="navbar navbar-expand-xl navbar-light text-center py-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img loading="prelaod" decoding="async" class="img-fluid" width="160" src="~/images/UAMISLogo.png" alt="UA MIS Mock Interviews">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action ="Index">Home</a>
                        </li>
                        @if (User.IsInRole(RolesConstants.StudentRole))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Sign-Up</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item " asp-area="" asp-controller="InterviewEvents" asp-action="Create">Interview</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item " asp-area="" asp-controller="VolunteerEvents" asp-action="Create">Volunteer</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="InterviewEvents" asp-action="FeedbackIndex">Feedback Portal</a>
                            </li>
                        }
                        @if (User.IsInRole(RolesConstants.InterviewerRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="SignupInterviewerTimeslots" asp-action="Create">Interviewer Sign-Up</a>
                            </li>
                        }
                        @if (User.IsInRole(RolesConstants.AdminRole))
                        {
                            <li class="nav-item dropdown"> <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Manage</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="InterviewEvents" asp-action="Index">Interviews</a>
                                     </li>
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="UserRoles" asp-action="Index">Users</a>
                                     </li>
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="LocationInterviewers" asp-action="Index">Locations</a>
                                     </li>
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="SignupInterviewerTimeslots" asp-action="Index">Interviewers Sign-Up</a>
                                     </li>
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="FAQs" asp-action="Index">FAQs</a>
                                     </li>
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="Timeslots" asp-action="Index">Timeslots</a>
                                     </li>
                                     <li>
                                         <a class="dropdown-item "asp-area="" asp-controller="VolunteerEvents" asp-action="Index">Volunteers</a>
                                     </li>
                                </ul>
                            </li>


                            @*<li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="RoleManager" asp-action="Index">Manage Roles</a>
                              </li>
                            <li class="nav-item">
                                @*<a class="nav-link text-dark" asp-area="" asp-controller="InterviewEvents" asp-action="Index">Feedback Responses</a>
                            </li>*@
                        }


                        <li class="nav-item ">
                            <a class="nav-link" asp-area="" asp-controller="FAQs" asp-action="Resources">Resources</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <!-- /navigation -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="section-sm bg-tertiary">
        <div class="container">
            <div class="row align-items-center mt-5 text-center text-md-start">
                <div class="col-lg-4">
                    <a href="index.html">
                        <img loading="preload" decoding="async" class="img-fluid" width="160" src="~/images/UAMISLogo.png" alt="UA MIS Mock Interviews">
                    </a>
                </div>
                <div class="col-lg-4 col-md-6 mt-4 mt-lg-0">
                    <ul class="list-unstyled list-inline mb-0 text-lg-center">
                        <li class="list-inline-item me-8">
                            <a class="text-black" href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-6 text-md-end mt-4 mt-md-0">
                    <p>© 2023 - UA MIS Mock Interviews</p>
                </div>
            </div>
        </div>
    </footer>


    <!-- # JS Plugins -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/plugins/slick/slick.min.js"></script>
    <script src="~/plugins/scrollmenu/scrollmenu.min.js"></script>

    <!-- Main Script -->
    <script src="~/js/script.js"></script>

    <!-- Data Tables -->
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.js" integrity="sha384-apERv/vfl/R6zmx+HUeBeGTjYRpHuiF1JRYCuBd9KhRME4NTtll1FkO+CelUWYgp" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
    <script>
        // Format date column
        const dateElements = document.querySelectorAll('.date-column');
        dateElements.forEach(element => {
            const date = new Date(element.textContent);
            const formattedDate = date.toLocaleDateString();
            element.textContent = formattedDate;
        });

        // Format time column
        const timeElements = document.querySelectorAll('.time-column');
        timeElements.forEach(element => {
            const date = new Date(element.textContent);
            const formattedTime = date.toLocaleTimeString([], { hour: 'numeric', minute: '2-digit' });
            element.textContent = formattedTime;
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
