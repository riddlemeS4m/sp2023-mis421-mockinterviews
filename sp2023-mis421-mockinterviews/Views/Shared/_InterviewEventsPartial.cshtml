@model IEnumerable<sp2023_mis421_mockinterviews.Models.ViewModels.InterviewEventViewModel>

<h3>Upcoming Interviews</h3>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Checked In</th>
                <th>Location</th>
                <th>Interviewer</th>
                <th>Interview Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var interviewEventViewModel in Model)
            {
                <tr>
                    <td>@interviewEventViewModel.InterviewEvent.Timeslot.EventDate.Date</td>
                    <td>@interviewEventViewModel.InterviewEvent.Timeslot.Time</td>
                    <td>@interviewEventViewModel.InterviewEvent.Status</td>
                    @if (interviewEventViewModel.InterviewEvent.Location == null)
                    {
                        <td>Not Assigned</td>
                    }
                    else
                    {
                        <td>@interviewEventViewModel.InterviewEvent.Location.Room</td>
                    }
                    @if (interviewEventViewModel.InterviewEvent.SignupInterviewerTimeslot == null)
                    {
                        <td>Not Assigned</td>
                    }
                    else
                    {
                        <td>@interviewEventViewModel.InterviewerName</td>
                    }
                    <td>@interviewEventViewModel.InterviewEvent.InterviewType</td>
                    <td>
                        @Html.ActionLink("Cancel",
                "UserDelete",   // <-- ActionMethod
                "InterviewEvents",  // <-- Controller Name.
                new { interviewEventViewModel.InterviewEvent.Id }, // <-- Route arguments.
                null
                )

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No upcoming events</p>
}
