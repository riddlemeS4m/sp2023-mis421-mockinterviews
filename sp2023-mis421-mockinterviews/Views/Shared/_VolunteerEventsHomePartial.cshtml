@model IEnumerable<sp2023_mis421_mockinterviews.Models.ViewModels.VolunteerEventViewModel>

<h3>Upcoming Volunteer Events</h3>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var volunteerEvent in Model)
            {
                <tr>
                    <td>@volunteerEvent.VolunteerEvent.Timeslot.EventDate.Date</td>
                    <td>@volunteerEvent.VolunteerEvent.Timeslot.Time</td>
                    <td>
                        @Html.ActionLink("Cancel",
                "Delete",   // <-- ActionMethod
                "VolunteerEvents",  // <-- Controller Name.
                new { volunteerEvent.VolunteerEvent.Id }, // <-- Route arguments.
                null  
                )
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No upcoming events</p>
}


