@model IEnumerable<sp2023_mis421_mockinterviews.Models.ViewModels.TimeRangeViewModel>

<h3>Volunteer Schedule</h3>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var timeRange in Model)
            {
                <tr>
                    <td class="date-column">@timeRange.Date</td>
                    <td>@timeRange.StartTime - @timeRange.EndTime</td>
                    <td>
                        @Html.ActionLink("Cancel",
                            "UserDeleteRange",   // <-- ActionMethod
                            "VolunteerEvents",  // <-- Controller Name.
                            new { timeslots = timeRange.TimeslotIds.ToArray() }, // <-- Route arguments.
                            null  
                        )
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No upcoming events</p>
}
<hr />