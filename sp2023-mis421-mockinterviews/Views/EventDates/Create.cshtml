@model sp2023_mis421_mockinterviews.Models.ViewModels.EventDateCreationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EventDate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="EventDate.Date" class="control-label"></label>
                <input asp-for="EventDate.Date" class="form-control" />
                <span asp-validation-for="EventDate.Date" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EventDate.EventName" class="control-label"></label>
                <input asp-for="EventDate.EventName" class="form-control" />
                <span asp-validation-for="EventDate.EventName" class="text-danger"></span>
            </div>

            <br />
                <label class="control-label">Make this event active?</label>
            <br />

            <div class="form-check form-check-inline">
                <input id="EventDate.IsActiveTrue"
                       class="form-check-input"
                       type="radio"
                       name="EventDate.IsActive"
                       value="true"
                       checked="checked"
                       data-val="true"
                       data-val-required="Please select an option">
                <label class="form-check-label" for="EventDate.IsActiveTrue">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input id="EventDate.IsActiveFalse"
                       class="form-check-input"
                       type="radio"
                       name="EventDate.IsActive"
                       value="false"
                       data-val="true"
                       data-val-required="Please select an option">
                <label class="form-check-label" for="EventDate.IsActiveFalse">No</label>
            </div>
            <br />

            <br />
                <label class="control-label">How many timeslots do you want to open up?</label>
            <br /><br />

            <div class="form-group">
                <label asp-for="MaxSignUps" class="control-label"></label>
                <input type="number" class="form-control" asp-for="MaxSignUps" />
                <span asp-validation-for="MaxSignUps" class="text-danger"></span>
            </div>

            <br />
                <label class="control-label">Which students is this event for?</label>
            <br />

            <div class="form-check form-check-inline">
                <input 
                    id="For221True" 
                    class="form-check-input" 
                    type="checkbox" 
                    name="For221True" 
                    value="y" 
                    data-val="true" 
                    data-val-required="Please select an option"
                >
                <label class="form-check-label" for="EventDate.For221True">MIS 221</label>
            </div>
            <div class="form-check form-check-inline">
                <input 
                    id="For221False" 
                    class="form-check-input" 
                    type="checkbox" 
                    name="For221False" 
                    value="n" 
                    data-val="true" 
                    data-val-required="Please select an option"
                >
                <label class="form-check-label" for="EventDate.For221False">MIS 321 & Above</label>
            </div>
            <span asp-validation-for="EventDate.For221" class="text-danger"></span>
            <br /><br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> | <a asp-controller="EventDate" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

