<div>
    Please wait while we attempt to log you out...
</div>


<form id="external-logout-form" name="external-logout" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
    <input type="hidden"/>
</form>

<div onload="attemptLogout()"></div>

@section Scripts {
    <script>
        window.onload = ()  =>{
            console.log('submitting form...')
            document.forms['external-logout'].submit()
            console.log('form submitted!')
        }
    </script>
}
