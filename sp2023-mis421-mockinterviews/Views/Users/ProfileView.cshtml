@using sp2023_mis421_mockinterviews.Data;
@using sp2023_mis421_mockinterviews.Models.ViewModels;
@model UserProfileViewModel

<h1>@Model.FirstName @Model.LastName</h1>

<div>
    <label>Phone number:</label>
    <span>@Model.PhoneNumber</span>
</div>

@if (User.IsInRole(RolesConstants.StudentRole))
{
    <div>
        <label>Resume:</label>
        @if (Model.Resume != null)
        {
            <a href="@Url.Action("DownloadResume", "Users", new { userId = Model.Id })" class="btn btn-primary">Download Resume</a>
        }
        else
        {
            <span>No resume uploaded</span>
        }
    </div>
}

<div>
    <label>Profile picture:</label>
    @if (Model.ProfilePicture != null)
    {
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.ProfilePicture))" style="width: 350px; height: 350px; object-fit: cover" />
    }
    else
    {
        <span>No profile picture uploaded</span>
    }
</div>

