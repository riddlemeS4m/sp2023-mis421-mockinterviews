@using sp2023_mis421_mockinterviews.Models.MockInterviewDb
@model Question

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FAQs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Q" class="control-label"></label>
                <textarea asp-for="Q" class="form-control" placeholder="Type question here."></textarea>
                <span asp-validation-for="Q" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <label asp-for="A" class="control-label"></label>
                <textarea asp-for="A" class="form-control" placeholder="Type answer here."></textarea>
                <span asp-validation-for="A" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
