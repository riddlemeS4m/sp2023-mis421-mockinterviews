@using sp2023_mis421_mockinterviews.Models.MockInterviewDb
@using sp2023_mis421_mockinterviews.Data;
@model IEnumerable<FAQs>

<!DOCTYPE html>
<html>
<head>
	<title>FAQs</title>
	<style>
		.faq {
			display: flex;
			flex-direction: column;
			align-items: center;
			margin-bottom: 20px;
			max-width: 600px;
			padding: 20px;
			border: 1px solid #ccc;
			border-radius: 5px;
			text-align: center;
		}
		.question {
			font-size: 24px;
			font-weight: bold;
			margin-bottom: 10px;
		}
		.answer {
			font-size: 16px;
			margin-left: 20px;
		}
	</style>
	
</head>
<body>
	<h1>FAQs</h1>
	@foreach (var faq in Model)
	{
		<div class="faq">
			<div class="question">@faq.Question</div>
			<div class="answer">@faq.Answer</div>
		</div>
	}

	@if (User.IsInRole(RolesConstants.InterviewerRole))
	{
		<div>
			@using (Html.BeginForm("Download", "FAQs"))
			{
				<input class="btn btn-primary ms-2 ms-lg-3" type="submit" value="Download Word Document" />
			}
		</div>
	}

	@if(User.Identity.IsAuthenticated && User.IsInRole(RolesConstants.StudentRole))
	{
		<div>
			<p>
				Prepare for your interview!
			</p>
		</div>
		<div>
			<form id="chat-form" onsubmit="generateText(); return false;">
				<input id="prompt" type="text" name="prompt" placeholder="Enter a prompt">
				<button type="submit">Send</button>
			</form>
		</div>
		<div id="output">
		</div>
	}

	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js" integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script>
		function generateText() {
			const prompt = document.getElementById("prompt").value;
			console.log(prompt);
			const data = new URLSearchParams();
			data.append('prompt', prompt);
			axios.post("/FAQs/Chat", data)
				.then(response => {
					if (response.data.success) {
						const text = response.data.response;
						console.log(response)
						document.getElementById("output").innerText = text;
					} else {
						const error = response.data.error;
						console.error(error);
						document.getElementById("output").innerText = "Error: " + error;
					}
				})
				.catch(error => {
					console.error(error);
					document.getElementById("output").innerText = "Error: " + error.message;
				});
		}
	</script>	
</body>
</html>