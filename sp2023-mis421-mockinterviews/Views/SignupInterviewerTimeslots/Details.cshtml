@using sp2023_mis421_mockinterviews.Data.Constants;
@model sp2023_mis421_mockinterviews.Models.MockInterviewDb.InterviewerTimeslot

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SignupInterviewerTimeslot</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InterviewerSignup.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InterviewerSignup.FirstName) @Html.DisplayFor(model => model.InterviewerSignup.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.Event.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.Event.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InterviewerSignup.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InterviewerSignup.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InterviewerSignup.InPerson)
        </dt>

        @if (Model.InterviewerSignup.IsVirtual && Model.InterviewerSignup.IsBehavioral)
        {
            <dd>@InterviewLocationConstants.InPerson/@InterviewLocationConstants.IsVirtual</dd>
        }
        else if (Model.InterviewerSignup.InPerson)
        {
            <dd>@InterviewLocationConstants.InPerson</dd>
        }
        else
        {
            <dd>@InterviewLocationConstants.IsVirtual</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
