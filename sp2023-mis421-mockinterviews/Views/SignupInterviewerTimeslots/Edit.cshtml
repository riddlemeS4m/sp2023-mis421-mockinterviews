@model sp2023_mis421_mockinterviews.Models.ViewModels.SignupInterviewerTimeslotsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SignupInterviewerTimeslot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="SignupInterviewer.InPerson" class="control-label">How would you like to interview?</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="SignupInterviewer.InPerson" value="true">
                <label class="form-check-label" for="InPersonTrue">In Person</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="SignupInterviewer.InPerson" value="false">
                <label class="form-check-label" for="InPersonFalse">Virtual</label>
            </div>
            <span asp-validation-for="SignupInterviewer.InPerson" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="SignupInterviewer.IsTechnical" class="control-label"></label>
                <input type="checkbox" name="SignupInterviewer.IsTechnical" value="true" />
                @*                <span asp-validation-for="SignupInterviewer.IsTechnical" class="text-danger"></span>
                *@
            </div>
            <div class="form-group">
                <label asp-for="SignupInterviewer.IsBehavioral" class="control-label"></label>
                <input type="checkbox" name="SignupInterviewer.IsBehavioral" value="true" />
                @*                <span asp-validation-for="SignupInterviewer.IsBehavioral" class="text-danger"></span>
                *@
            </div>

            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
