@model sp2023_mis421_mockinterviews.Models.MockInterviewDb.SignupInterviewerTimeslot

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SignupInterviewerTimeslot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SignupInterviewer.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SignupInterviewer.FirstName) @Html.DisplayFor(model => model.SignupInterviewer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.EventDate.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.EventDate.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SignupInterviewer.IsBehavioral)
        </dt>

        @if (Model.SignupInterviewer.IsBehavioral && Model.SignupInterviewer.IsTechnical)
        {
            <dd>Behavioral, Technical</dd>
        }
        else if (Model.SignupInterviewer.IsBehavioral && !Model.SignupInterviewer.IsTechnical)
        {
            <dd>Behavioral</dd>
        }
        else if (!Model.SignupInterviewer.IsBehavioral && Model.SignupInterviewer.IsTechnical)
        {
            <dd>Technical</dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.SignupInterviewer.InPerson)
        </dt>

        @if (Model.SignupInterviewer.IsVirtual)
        {
            <dd>Virtual</dd>
        }
        else if (Model.SignupInterviewer.InPerson)
        {
            <dd>In Person</dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
